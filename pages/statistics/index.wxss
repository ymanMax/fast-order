.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.chart-item {
  width: 300px;
  height: 250px;
  margin: 10rpx;
  padding: 15rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.chart-picker {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 5rpx 10rpx;
  border-radius: 4rpx;
}