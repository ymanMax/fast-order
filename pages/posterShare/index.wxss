/* pages/posterShare/index.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.canvas-container {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
  overflow: hidden;
}

.poster-canvas {
  display: block;
  border-radius: 10rpx;
}

.btn-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 600rpx;
  gap: 20rpx;
}

.btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.btn-save {
  background-color: #07c160;
  color: #ffffff;
}

.btn-share {
  background-color: #1aad19;
  color: #ffffff;
}

.btn::after {
  border: none;
}